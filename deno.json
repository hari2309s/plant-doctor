{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --allow-write --watch src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-env src/main.ts",
    "test": "deno run --allow-net --allow-read --allow-env scripts/test.ts"
  },
  "imports": {
    "@/": "./src/"
  },
  "fmt": {
    "files": {
      "include": ["src/", "scripts/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false
    }
  }
}
